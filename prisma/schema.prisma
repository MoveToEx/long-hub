generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Rating {
  none
  moderate
  violent
}

model post {
  id         String   @id @db.Char(36)
  text       String   @db.Text
  aliases    alias[]
  image      String   @db.VarChar(255)
  imageHash  String   @db.VarChar(255)
  imageURL   String   @db.VarChar(128)
  rating     Rating   @default(none)
  createdAt  DateTime @db.DateTime(0)
  updatedAt  DateTime @db.DateTime(0)
  uploaderId Int?
  uploader   user?    @relation(fields: [uploaderId], references: [id], map: "post_ibfk_1")
  tags       tag[]

  @@index([uploaderId], map: "uploaderId")
}

model alias {
  id     Int    @id
  text   String
  postId String
  post   post   @relation(fields: [postId], references: [id])
}

model tag {
  id    Int    @id @default(autoincrement())
  name  String @db.VarChar(255) @unique
  posts post[]
}

model template {
  name       String   @id @db.VarChar(255)
  imageURL   String   @db.VarChar(128)
  offsetX    Int?
  offsetY    Int?
  rectHeight Int?
  rectWidth  Int?
  style      String?  @db.VarChar(255)
  image      String?  @db.VarChar(255)
  createdAt  DateTime @db.DateTime(0)
  uploaderId Int?
  uploader   user?    @relation(fields: [uploaderId], references: [id])
}

model user {
  id           Int        @id @default(autoincrement())
  email        String?    @db.VarChar(255)
  name         String     @db.VarChar(255)
  permission   Int        @default(0)
  accessKey    String     @db.VarChar(255) @unique
  passwordHash String     @db.VarChar(255)
  createdAt    DateTime   @db.DateTime(0)
  post         post[]
  template     template[]
}
